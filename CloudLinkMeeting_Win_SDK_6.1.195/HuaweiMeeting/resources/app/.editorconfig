# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.{js,css,less,html,json,svg}]
#end_of_line = lf
#insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.{h,hpp,c,cxx,cpp}]
charset = utf-8
indent_style = space
indent_size = 4
